{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "printWidth": 120,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser": "vue",
        "vueIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "ignore",
        "printWidth": 120
      }
    },
    {
      "files": "*.{js,ts}",
      "options": {
        "printWidth": 100
      }
    }
  ]
}