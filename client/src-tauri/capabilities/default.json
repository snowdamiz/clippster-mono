{
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:event:default",
    "core:path:default",
    "core:path:allow-resolve",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-message",
    "shell:allow-execute",
    "shell:allow-open",
    "opener:default",
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    }
  ],
  "platforms": ["windows", "macOS", "linux"]
}
