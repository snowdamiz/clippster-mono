{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippster-ui",
  "version": "0.1.0",
  "identifier": "com.openworth.clippster",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clippster",
        "width": 1500,
        "height": 950,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "visible": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost; connect-src 'self' http://localhost:4000 https://api.clippster.example.com https://*; img-src 'self' asset: https://asset.localhost data:; media-src 'self' asset: https://asset.localhost; video-src 'self' asset: https://asset.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": [".*/.*"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPLOCALDATA/Clippster/**"]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:clippster.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/ffmpeg*"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
